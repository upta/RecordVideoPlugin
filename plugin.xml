<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.caasera.record"
    version="1.0.0">

    <engines>
        <engine name="cordova" version=">=3.2.0" />
    </engines>

	<name>RecordVideo</name>
	<description></description>
    <author></author>
    <keywords></keywords>
	<license></license>
    
    <js-module src="www/RecordVideo.js" name="RecordVideo">
		<clobbers target="RecordVideo" />
	</js-module>
    
    <platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
            <feature name="RecordVideo" >
                <param name="android-package" value="com.caasera.record.RecordVideo"/>
            </feature>
        </config-file>
		
		<config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <uses-permission android:name="android.permission.RECORD_VIDEO" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            
            <activity android:name="com.caasera.record.RecordActivity"></activity>
        </config-file>
        <source-file src="src/android/RecordVideo.java" target-dir="src/com/caasera/record" />
        <source-file src="src/android/RecordActivity.java" target-dir="src/com/caasera/record" />
        <source-file src="src/android/CameraHelper.java" target-dir="src/com/caasera/record" />
	</platform>
    
</plugin>